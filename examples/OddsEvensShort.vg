// Odds and Evens (short form with join parameters)
// Distribution semantics with quit punishment (pot = 200, deposits = 100 each)
// See OddsEvens.vg for detailed payoff rationale

game main() {
  join  Odd(c: bool) $ 100
       Even(c: bool) $ 100;
  withdraw { Even -> ((Even.c <-> Odd.c) ? 126 : 74); Odd -> ((Even.c <-> Odd.c) ? 74 : 126) }
}
