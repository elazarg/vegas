// Odds and Evens (short form using split handler)
// Distribution semantics with quit punishment (pot = 200, deposits = 100 each)

game main() {
  join Odd() $ 100 Even() $ 100;

  yield or split
    Odd(c: bool)
    Even(c: bool);

  withdraw {
    Even -> ((Even.c <-> Odd.c) ? 126 : 74);
    Odd -> ((Even.c <-> Odd.c) ? 74 : 126)
  }
}
